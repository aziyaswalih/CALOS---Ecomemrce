    <script>
        const orderId =`<%= order._id%>`;
        const lastSixDigits = orderId.slice(-6);
        document.getElementById('order-id').innerText = `Details for Order ID: ${lastSixDigits}`;
        document.getElementById('OrderId').innerText = `Order ID: ${lastSixDigits}`;

    </script>
    <script>
        async function status() {
        const statusSelect = document.getElementById('statusSelect');
        const newStatus = statusSelect.value;
        const statusChangeMsg = document.getElementById('statusChangeMsg');
    
        try {
            const response = await fetch('/admin/order/statusChange?id=<%= order._id %>', {  // Use the original order._id for the fetch request
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status: newStatus })
            });
    
            const data = await response.json();
    
            if (response.ok) {
                // Update order status in the UI or show a success message
                statusChangeMsg.textContent = 'Status updated successfully';
                statusChangeMsg.classList.add('text-success');
                // You might want to refresh the page or update the order status display on the page.
            } else {
                // Display an error message to the user
                statusChangeMsg.textContent = data.error || 'Failed to update status';
                statusChangeMsg.classList.add('text-danger');
            }
        } catch (error) {
            console.error("Error updating status:", error);
            statusChangeMsg.textContent = 'An error occurred';
            statusChangeMsg.classList.add('text-danger');
        }
    }
    
        </script>
