            <% } %>
        
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">Code</th>
                  <th scope="col">Discount Type</th>
                  <th scope="col">Discount Value</th>
                  <th scope="col">Active</th>
                  <th scope="col">Start Date</th>
                  <th scope="col">End Date</th>
                  <th scope="col">Minimum Order Amount</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% coupons.forEach(coupon => { %>
                  <tr>
                    <td><%= coupon.code %></td>
                    <td><%= coupon.discountType %></td>
                    <td><%= coupon.discountValue %></td>
                    <td>
                      <% if (coupon.isActive) { %>
                        <span class="badge rounded-pill bg-success">Active</span>
                      <% } else { %>
                        <span class="badge rounded-pill bg-danger">Inactive</span>
                      <% } %>
                    </td>
                    <td><%= coupon.startDate ? new Date(coupon.startDate).toLocaleDateString() : '' %></td>
                    <td><%= coupon.endDate ? new Date(coupon.endDate).toLocaleDateString() : '' %></td>
                    <td><%= coupon.minimumOrderAmount %></td>
                    <td>
                      <!-- <a href="/admin/editcoupon?id=<%= coupon._id %>" class="btn btn-sm btn-primary">Edit</a> -->
                      <!-- Consider adding a confirmation for deletion -->
