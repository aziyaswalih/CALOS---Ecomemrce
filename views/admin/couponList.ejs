    <script>
        function confirmBlock(couponId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete them!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // // Redirect to the block URL if confirmed
                    // window.location.href = '/admin/block?id=' + userId;
                    fetch(`/admin/deletecoupon?id=${couponId}`,{
                        method:'DELETE',
                        headers:{
                                
                    'Content-Type': 'application/json',
                        }
                    }) .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                    Swal.fire({
                        title: 'Deleted!',
                        text: 'The coupon has been deleted.',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Optional: Add any additional action after the user clicks OK
                            console.log('User acknowledged the block');
                            window.location.reload();                        }
                    });
                } else {
                    Swal.fire(
                        'Error!',
                        'There was a problem in deleting the coupon.',
                        'error'
                    );
                }
            })


            
                }
            });
        }
        </script>
