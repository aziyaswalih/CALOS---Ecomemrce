    <script>
        const removeButtons = document.querySelectorAll('.remove-button');
      
        removeButtons.forEach(button => {
          button.addEventListener('click', async () => {
            const imageIndex = button.dataset.data-image-index;
            const confirmDelete = confirm('Are you sure you want to delete this image?');
      
            if (confirmDelete) {
              try {
                const response = await fetch('/admin/delete-image', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ imageIndex })
                });
      
                if (response.ok) {
                  // Image deleted successfully
                  // Update the UI to remove the image (e.g., remove the image-container div)
                  button.closest('.image-container').remove(); 
                } else {
                  console.error('Error deleting image:', response.statusText);
                }
              } catch (error) {
                console.error('Error deleting image:', error);
              }
            }
          });
        });
      </script>
      
    <script>async function updateProduct() {
        // ... (your existing validation logic) ...
        let id=document.getElementById('id').value
        let name=document.getElementById('name').value
        let description=document.getElementById('description').value
        let price=document.getElementById('price').value
        let promoprice=document.getElementById('promoPrice').value
        let category=document.getElementById('category').value
      
        const sizeElements = document.querySelectorAll('input[name^="sizes"]'); 
              const sizes = [];
      
